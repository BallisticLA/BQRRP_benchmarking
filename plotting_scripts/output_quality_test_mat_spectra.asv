function[] = output_quality_test_mat_spectra(filename1, filename2, filename3, show_labels)
    Data_in_1 = readfile(filename1, 4);
    Data_in_2 = readfile(filename2, 4);
    Data_in_3 = readfile(filename3, 4);

    tiledlayout(1, 3,"TileSpacing","compact");
    nexttile
    plot_spectra(Data_in_1, show_labels, 1);
    nexttile
    plot_spectra(Data_in_2, show_labels, 2);
    nexttile
    plot_spectra(Data_in_3, show_labels, 3);

    
end

function[] = plot_spectra(Data_in, show_labels, plot_position)

    dim = size(Data_in, 2);
    x = 1:dim;
    semilogy(Data_in, '', 'Color', 'black', "MarkerSize", 1.8,'LineWidth', 2.0)


    ax = gca;
    ax.XAxis.FontSize = 20;
    ax.YAxis.FontSize = 20;
    grid on 
    %xlim([0 dim]);
    xlim_padding = 0.1;
    xlim([0, dim*(1+xlim_padding)])

    ylim([10^-2 y_lim]);

    if show_labels 
        switch plot_position
            case 1
                title("")
            case 2
                xlabel('k', 'FontSize', 20);
            case 3
        end
    end


    xticks([4000 12000]);
end

        
